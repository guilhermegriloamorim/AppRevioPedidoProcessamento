<input type="text" name="@Name" @bind="Message" @attributes="DefautAttributes">

@code {

    [Parameter]
    public string Name { get; set; }
    private string Message { get; set; }

    public Dictionary<string, object> DefautAttributes { get; set; } =
    new Dictionary<string, object>()
    {
        { "maxlength", "80" },
        { "placeholder", "Digite um Valor" },
        { "class", "form-control"}
    };

    public string ShowMessage()
    {
        if (string.IsNullOrEmpty(Message))
            return null;
        return $"A messangem foi {Message}";
    }
}